@import 'nib'

color_dark=rgba(0, 0, 0, 0.7)
color_blue=#3498db
color_red=#ff5e37
background_light=#eeeeee
background_dark=#283442

*
  margin 0
  padding 0
  box-sizing border-box

body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  background-color #fafafa
  color color_dark
  font-size 14px
  font-weight 400

.header
  display flex
  justify-content space-between
  margin-top 20px
  .logo
    display flex
    align-items center
    padding-top 20px
    padding-left 40px
    a
      width 60px
      height 60px
      transition transform ease-in 0.2s
      img
        width 100%
        height 100%
        box-shadow 0px 0px 0px 4px #283442
        border-radius 50%
      &:hover
        transform scale(1.2)
    .author
      margin-left 10px
      text-transform uppercase
      letter-spacing 1px
      font-weight 800
      font-size 20px
      cursor pointer
  .nav-bar
    padding-top 20px
    padding-right 40px
    #toggle-nav
      display none
      cursor pointer
    #nav-feature
      display block
      text-align center
      list-style none
      li
        position relative
        display inline-block
        min-width 145px
        font-size 20px
        margin-right 20px
        &:last-child
          margin-right 0px
        &:hover a
          color color_red
          text-shadow -1px 0 #fff, 0 1px #fff, 1px 0 #fff, 0 -1px #fff
        a
          display block
          color color_dark
          outline none
          font-weight 800
          text-transform uppercase
          text-decoration none
          letter-spacing 1px
          line-height 20px
          padding  20px
          transition color 0.3s
        &::before, &::after
          content ''
          position absolute
          top 50%
          left 0
          width 100%
          height 2px
          opacity 0.3
          background color_dark
          z-index -1
          transition transform 0.2s, opacity 0.2s
        &::before
          transform translateY(-20px)
        &::after
          transform translateY(20px)
        &:hover::before
            opacity 0.8
            transform rotate(45deg)
        &:hover::after
            opacity 0.8
            transform rotate(-45deg)

  .social
    padding-top 20px
    padding-right 40px
    a
      display block
      width 60px
      height 60px
      transition transform ease-in 0.2s
      img
        width  100%
      &:hover
        transform scale(1.2)
.social-wrapper
  padding-bottom 84px
#main-footer
  height 50em
  position relative
  background background_dark
  &:before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 5px
    background repeating-linear-gradient(
      -45deg,
      color_blue,
      color_blue 7px,
      background_light 7px,
      background_light 14px,
      color_red 14px,
      color_red 21px,
      background_light 21px,
      background_light 28px
    )

@media screen and (max-width 480px)
  .header .nav-bar #toggle-nav
    display block

  .header .nav-bar #nav-feature
    display none

